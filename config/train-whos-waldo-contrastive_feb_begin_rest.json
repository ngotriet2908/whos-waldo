{
    "model_config": "./config/uniter-base.json",
    "output_dir": "./storage/finetune/finetune-contrastive-begin-rest-feb",
    "checkpoint": "./storage/pretrained/uniter-base.pt",
    "null_id": false,
    "itm_neg_prob": 0.5,
    "max_txt_len": 100,
    "conf_th": 0.2,
    "max_bb": 100,
    "min_bb": 1,
    "num_bb": 36,
    "train_batch_size": 512,
    "val_batch_size": 1024,
    "gradient_accumulation_steps": 6,
    "learning_rate": 5e-05,
    "valid_steps": 500,
    "num_train_steps": 50000,
    "optim": "adamw",
    "betas": [
        0.9,
        0.98
    ],
    "dropout": 0.1,
    "weight_decay": 0.01,
    "grad_norm": 5.0,
    "warmup_steps": 10000,
    "seed": 88,
    "fp16": true,
    "n_workers": 4,
    "pin_mem": true,
    "train_datasets": [
        {
            "name": "people",
            "db": "./storage/txt_db/txtdb-new/train",
            "img": "./storage/img_db/imgdb-new/train",
            "tasks": [
                "matching"            
            ],
            "mix_ratio": [
                1
            ]
        }

    ],
    "val_datasets": [
        {
            "name": "people",
            "db": "./storage/txt_db/txtdb-new/val",
            "img": "./storage/img_db/imgdb-new/val",
            "tasks": [
                "matching",
                "gt"
            ],
            "mix_ratio": [
                1,
                2
            ]
        }
    ]
}
